<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="autodecline-stash-plugin"/>
    
    <!-- add our web resources -->
    <web-resource key="autodecline-stash-plugin-resources" name="autodecline-stash-plugin Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="autodecline-stash-plugin.css" location="/css/autodecline-stash-plugin.css"/>
        <resource type="download" name="autodecline-stash-plugin.js" location="/js/autodecline-stash-plugin.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>autodecline-stash-plugin</context>
    </web-resource>
    
    <!-- publish our component -->
    <component key="myPluginComponent" class="com.pbuchman.stash.autodecline.MyPluginComponentImpl" public="true">
        <interface>com.pbuchman.stash.autodecline.MyPluginComponent</interface>
    </component>
    
    <!-- import from the product container -->
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties" />
    
</atlassian-plugin>